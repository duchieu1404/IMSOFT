<% include ../../partial/admin_header.ejs %>
<!-- Content Header (Page header)-->
<section class="content-header">
  <h1>Server Config<small>Configuration</small></h1>
  <ol class="breadcrumb">
    <li><a href="#"><i class="fa fa-dashboard"></i>Configuration</a></li>
    <li class="active">Server Config</li>
  </ol>
</section>
<!-- Main content-->
<section class="content">
  <div class="col-md-12 col-sm-12 col-xs-12">
    <div class="x_panel">
      <div class="x_content">
        <p class="text-muted font-13 m-b-30">
        </p>
        <table id="datatable" class="table table-striped table-bordered">
          <thead>
          <tr>
            <th>Action</th>
            <th>Id</th>
            <th>title</th>
            <th>event_status</th>
            <th>os_show</th>
            <th>version_name</th>
            <th>disable_review</th>
            <th>from_time</th>
            <th>to_time</th>
            <th>force_view</th>
            <th>content</th>
            <th>img_small</th>
            <th>img_full</th>
            <th>web_url</th>
            <th>btn1_skin</th>
            <th>btn1_label</th>
            <th>btn1_action</th>
            <th>btn1_data</th>
            <th>btn2_skin</th>
            <th>btn2_label</th>
            <th>btn2_action</th>
            <th>btn2_data</th>

          </tr>
          </thead>

          <tbody>
          <% dataEvent.forEach(function(conf) { %>
            <tr id = "dataServerConfig_<%= conf.id %>">
              <th>
                <button type="button"
                        class="btn btn-primary"
                        data-toggle="modal"
                        data-target=".edit-config-modal-lg"
                        onclick="btnEditClicked(<%= conf.id %>)"
                >Edit</button>

                <button type="button"
                        class="btn btn-primary"
                          onclick="btnDuplicate(<%= conf.id %>)"
                >Copy</button>
                <button type="button"
                        class="btn btn-danger"
                        onclick="btnDelete(<%= conf.id %>)"
                >XOÁ</button>
              </th>
              <th id = "ds_<%= conf.id %>_dts_id"><%= conf.id %></th>
              <th id = "ds_<%= conf.id %>_dts_title"><%= conf.title %></th>
              <th id = "ds_<%= conf.id %>_dts_event_status"><%= conf.event_status %></th>
              <th id = "ds_<%= conf.id %>_dts_event_os_show"><%= conf.os_show %></th>
              <th id = "ds_<%= conf.id %>_dts_event_version_name"><%= conf.version_name %></th>
              <th id = "ds_<%= conf.id %>_dts_event_disable_review"><%= conf.disable_review %></th>
              <th id = "ds_<%= conf.id %>_dts_from_time"><%= conf.from_time %></th>
              <th id = "ds_<%= conf.id %>_dts_to_time"><%= conf.to_time %></th>
              <th id = "ds_<%= conf.id %>_dts_force_view"><%= conf.force_view %></th>
              <th id = "ds_<%= conf.id %>_dts_content"><%= conf.content %></th>
              <th id = "ds_<%= conf.id %>_dts_img_small"><%= conf.img_small %></th>
              <th id = "ds_<%= conf.id %>_dts_img_full"><%= conf.img_full %></th>
              <th id = "ds_<%= conf.id %>_dts_web_url"><%= conf.web_url %></th>
              <th id = "ds_<%= conf.id %>_dts_btn1_skin"><%= conf.btn1_skin %></th>
              <th id = "ds_<%= conf.id %>_dts_btn1_label"><%= conf.btn1_label %></th>
              <th id = "ds_<%= conf.id %>_dts_btn1_action"><%= conf.btn1_action %></th>
              <th id = "ds_<%= conf.id %>_dts_btn1_data"><%= conf.btn1_data %></th>
              <th id = "ds_<%= conf.id %>_dts_btn2_skin"><%= conf.btn2_skin %></th>
              <th id = "ds_<%= conf.id %>_dts_btn2_label"><%= conf.btn2_label %></th>
              <th id = "ds_<%= conf.id %>_dts_btn2_action"><%= conf.btn2_action %></th>
              <th id = "ds_<%= conf.id %>_dts_btn2_data"><%= conf.btn2_data %></th>
          </tr>

          <% }); %>

          </tbody>
        </table>
      </div>
    </div>
  </div>

  <div class="modal fade edit-config-modal-lg" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-lg">
      <div class="modal-content">

        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">×</span>
          </button>
          <h4 class="modal-title" id="myModalLabel">Edit Config</h4>
        </div>
        <div class="modal-body">

          <form action="/admin/events/events" method="post" id="demo-form2" data-parsley-validate class="form-horizontal form-label-left">
            <div class="form-group">
              <label class="control-label col-md-1 col-sm-3 col-xs-4">Id </label>

              <div class="col-md-2 col-sm-9 col-xs-8">
                <input type="text" class="form-control" placeholder="Event Id" id = "edt_Id" name="edt_Id" value="">
              </div>

              <label class="control-label col-md-2 col-sm-3 col-xs-4">Enable</label>

              <div class="col-md-1 col-sm-9 col-xs-8">
                <input type="checkbox" class="form-control" id = "edt_event_status" name="edt_event_status" value = "0">
              </div>

            </div>

            <div class="form-group">

              <label class="control-label col-md-1 col-sm-3 col-xs-4">Force View</label>

              <div class="col-md-1 col-sm-9 col-xs-8">
                <input type="checkbox" class="form-control" id = "edt_force_view" name="edt_force_view" value = "0">
              </div>

              <label class="control-label col-md-1 col-sm-3 col-xs-4">Disable Review</label>

              <div class="col-md-1 col-sm-9 col-xs-8">
                <input type="checkbox" class="form-control" id = "edt_disable_review" name="edt_disable_review" value = "0">
              </div>

            </div>

            <!-- === -->

            <div class="form-group">
              <label class="control-label col-md-2 col-sm-3 col-xs-4">OS SHOW</label>
              <div class="col-md-9 col-sm-9 col-xs-12">
                <input  class="form-control col-md-5 col-xs-10"  type="text" id = "edt_os_show" name="edt_os_show" value=""> <!-- noi dung text: val -->
              </div>
            </div>

            <div class="form-group">
              <label class="control-label col-md-2 col-sm-3 col-xs-4">VERSIONs SHOW</label>
              <div class="col-md-9 col-sm-9 col-xs-12">
                <input  class="form-control col-md-5 col-xs-10"  type="text" id = "edt_version_name" name="edt_version_name" value="">
              </div>
            </div>

            <div class="form-group">
              <label class="control-label col-md-2 col-sm-3 col-xs-4">From </label>

              <div class="col-md-3 col-sm-9 col-xs-12">
                <input id="edt_from_time" name="edt_from_time" class="date-picker form-control col-md-5 col-xs-10"  type="text">
              </div>

              <label class="control-label col-md-2 col-sm-3 col-xs-4">To </label>

              <div class="col-md-4 col-sm-9 col-xs-12">
                <input id="edt_to_time" name="edt_to_time" class="date-picker form-control col-md-5 col-xs-10"  type="text">
              </div>
            </div>

            <div class="form-group">
              <label class="control-label col-md-2 col-sm-3 col-xs-4">Title</label>
              <div class="col-md-9 col-sm-9 col-xs-12">
                <input  class="form-control col-md-5 col-xs-10"  type="text" id = "edt_title" name="edt_title" value=""> <!-- noi dung text: val -->
              </div>
            </div>

            <div class="form-group">
              <label class="control-label col-md-2 col-sm-3 col-xs-4">Content</label>
              <div class="col-md-9 col-sm-9 col-xs-12">
                <input  class="form-control col-md-5 col-xs-10"  type="text" id = "edt_content" name="edt_content" value="">
              </div>
            </div>

            <div class="form-group">
              <label class="control-label col-md-2 col-sm-3 col-xs-4">IMG SMALL</label>
              <div class="col-md-9 col-sm-9 col-xs-12">
                <input  class="form-control col-md-5 col-xs-10"  type="text" id = "edt_img_small" name="edt_img_small" value=""> <!-- noi dung text: val -->
              </div>
            </div>

            <div class="form-group">
              <label class="control-label col-md-2 col-sm-3 col-xs-4">IMG FULL</label>
              <div class="col-md-9 col-sm-9 col-xs-12">
                <input  class="form-control col-md-5 col-xs-10"  type="text" id = "edt_img_full" name="edt_img_full" value="">
              </div>
            </div>

            <div class="form-group">
              <label class="control-label col-md-2 col-sm-3 col-xs-4">WEB URL</label>
              <div class="col-md-9 col-sm-9 col-xs-12">
                <input  class="form-control col-md-5 col-xs-10"  type="text" id = "edt_web_url" name="edt_web_url" value="">
              </div>
            </div>


            <div class="form-group">
              <label class="control-label col-md-2 col-sm-3 col-xs-4">BTN 1 SKIN </label>

              <div class="col-md-3 col-sm-9 col-xs-12">
                <input id="edt_btn1_skin" name="edt_btn1_skin" class=" form-control col-md-5 col-xs-10"  type="text">
              </div>

              <label class="control-label col-md-2 col-sm-3 col-xs-4">BTN 1 NAME </label>

              <div class="col-md-4 col-sm-9 col-xs-12">
                <input id="edt_btn1_label" name="edt_btn1_label" class="form-control col-md-5 col-xs-10"  type="text">
              </div>
            </div>

            <div class="form-group">
              <label class="control-label col-md-2 col-sm-3 col-xs-4">BTN 1 - ACTION</label>

              <div class="col-md-3 col-sm-9 col-xs-12">
                <input id="edt_btn1_action" name="edt_btn1_action" class="form-control col-md-5 col-xs-10"  type="text">
              </div>
            </div>

            <div class="form-group">
              <label class="control-label col-md-2 col-sm-3 col-xs-4">BTN 1 - DATA</label>
              <div class="col-md-9 col-sm-9 col-xs-12">
                <input  class="form-control col-md-5 col-xs-10"  type="text" id = "edt_btn1_data" name="edt_btn1_data" value="">
              </div>
            </div>


            <div class="form-group">
              <label class="control-label col-md-2 col-sm-3 col-xs-4">BTN 2 SKIN </label>

              <div class="col-md-3 col-sm-9 col-xs-12">
                <input id="edt_btn2_skin" name="edt_btn2_skin" class=" form-control col-md-5 col-xs-10"  type="text">
              </div>

              <label class="control-label col-md-2 col-sm-3 col-xs-4">BTN 2 NAME </label>

              <div class="col-md-4 col-sm-9 col-xs-12">
                <input id="edt_btn2_label" name="edt_btn2_label" class="form-control col-md-5 col-xs-10"  type="text">
              </div>
            </div>

            <div class="form-group">
              <label class="control-label col-md-2 col-sm-3 col-xs-4">BTN 2 ACTION</label>

              <div class="col-md-3 col-sm-9 col-xs-12">
                <input id="edt_btn2_action" name="edt_btn2_action" class="form-control col-md-5 col-xs-10"  type="text">
              </div>
            </div>
              <div class="form-group">
              <label class="control-label col-md-2 col-sm-3 col-xs-4">BTN 2 - DATA</label>
              <div class="col-md-9 col-sm-9 col-xs-12">
                <input  class="form-control col-md-5 col-xs-10"  type="text" id = "edt_btn2_data" name="edt_btn2_data" value="">
              </div>
            </div>

            <div class="modal-footer">
              <input type="submit" class="btn btn-default" data-dismiss="modal" value="Close">
              <input type="submit" class="btn btn-primary" value="Save changes">
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>


</section>

<script type="text/javascript">
  var btnEditClicked = function(serverId){
    $('#edt_Id').val($('#ds_'+serverId+'_dts_id').html());

    $('#edt_os_show').val($('#ds_'+serverId+'_dts_os_show').html());
    $('#edt_version_name').val($('#ds_'+serverId+'_dts_version_name').html());

//    $('#edt_event_status').val($('#ds_'+serverId+'_dts_event_status').html());
//    $('#edt_disable_review').val($('#ds_'+serverId+'_dts_disable_review').html());
//    $('#edt_force_view').val($('#ds_'+serverId+'_dts_force_view').html());

    $('#edt_event_status').prop("checked",$('#ds_'+serverId+'_dts_event_status').html()==1);
    $('#edt_disable_review').prop("checked",$('#ds_'+serverId+'_dts_disable_review').html()==1);
    $('#edt_force_view').prop("checked",$('#ds_'+serverId+'_dts_force_view').html()==1);

    $('#edt_from_time').val($('#ds_'+serverId+'_dts_from_time').html());
    $('#edt_to_time').val($('#ds_'+serverId+'_dts_to_time').html());
    $('#edt_title').val($('#ds_'+serverId+'_dts_title').html());
    $('#edt_content').val($('#ds_'+serverId+'_dts_content').html());
    $('#edt_img_small').val($('#ds_'+serverId+'_dts_img_small').html());
    $('#edt_img_full').val($('#ds_'+serverId+'_dts_img_full').html());

    $('#edt_web_url').val($('#ds_'+serverId+'_dts_web_url').html());

    $('#edt_btn1_skin').val($('#ds_'+serverId+'_dts_btn1_skin').html());
    $('#edt_btn1_label').val($('#ds_'+serverId+'_dts_btn1_label').html());
    $('#edt_btn1_action').val($('#ds_'+serverId+'_dts_btn1_action').html());
    $('#edt_btn1_data').val($('#ds_'+serverId+'_dts_btn1_data').html());

    $('#edt_btn2_skin').val($('#ds_'+serverId+'_dts_btn2_skin').html());
    $('#edt_btn2_label').val($('#ds_'+serverId+'_dts_btn2_label').html());
    $('#edt_btn2_action').val($('#ds_'+serverId+'_dts_btn2_action').html());
    $('#edt_btn2_data').val($('#ds_'+serverId+'_dts_btn2_data').html());
  }

  var btnDuplicate = function(eventId)
  {
    var xConfirm = confirm("Bạn có thực sự muốn nhân đôi event  "+eventId+" ?");
    if(!xConfirm) return;
    window.location.href = '/admin/events/duplicate/'+eventId;
  }

  var btnDelete = function(eventId)
  {
    var xConfirm = confirm("Bạn có thực sự muốn xoá event "+eventId+" ?");
    if(!xConfirm) return;
    window.location.href = '/admin/events/delete/'+eventId;
  }

</script>

<% include ../../partial/admin_footer.ejs %>