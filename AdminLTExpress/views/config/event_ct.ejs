<% include ../partial/admin_header.ejs %>
<!-- Content Header (Page header)-->
<section class="content-header">
  <h1>Server Config<small>Configuration</small></h1>
  <ol class="breadcrumb">
    <li><a href="#"><i class="fa fa-dashboard"></i>Configuration</a></li>
    <li class="active">Event popup</li>
  </ol>
</section>


<!-- Main content-->
<section class="content">

  <div class="col-md-12 col-sm-12 col-xs-12">
    <div class="x_panel">
      <div class="x_title">
        <div class="clearfix"></div>
      </div>

      <div class="box box-info">

        <div class="box-footer">
            <input type="button" data-toggle="modal" data-target=".edit-config-modal-lg" class="btn btn-success" value="Add New Event" onclick="onClick_btnAddNewEvent()" />
            <input type="button" data-toggle="modal" data-target=".event-ct-add-score-modal-lg" class="btn btn-primary" value="Add New Score"/>
            <input type="button" data-toggle="modal" data-target=".event-ct-insert-test-data-modal-lg" class="btn btn-info" value="Insert Test Data" />

        </div>

      </div>
    </div>
  </div>

  <div class="col-md-12 col-sm-12 col-xs-12">
    <div class="x_panel">
      <div class="x_content">
        <p class="text-muted font-13 m-b-30">
        </p>
        <table id="datatable" class="table table-striped table-bordered">
          <thead>
          <tr>
            <th>Action </th>
            <th>id</th>
            <th>status</th>
            <th>time_from</th>
            <th>time_to</th>
            <th>count_by</th>
            <th>join_require</th>
            <th>join_reward</th>
            <th>has_all_boost</th>
            <th>max_rest_id</th>
            <th>time_show_from</th>
            <th>time_show_to</th>
            <th>evt_popup_copy</th>
            <th>champion_rest</th>
          </tr>
          </thead>
          <tbody>
          <% dataConfigs.forEach(function(conf) { %>
          <tr id = "dataServerConfig_<%= conf.id %>">
            <th>
              <button type="button"
                      class="btn btn-primary"
                      data-toggle="modal"delete_event_popup
                      data-target=".edit-config-modal-lg"
                      onclick="btnEditClicked(<%= conf.id %>)"
              >Edit</button>

              <button type="button"
                      class="btn btn-danger"
                      data-toggle="modal"
                      data-target=".delete_user-modal-lg"
                      onclick="btnDeleteEventGcc(<%= conf.id %>)"
              >Delete</button>

            </th>
            <th id = "ds_<%= conf.id %>_dts_id"><%= conf.id %></th>
            <th id="ds_<%= conf.id %>_dts_status"><%= conf.status %></th>
            <th id = "ds_<%= conf.id %>_dts_time_from"><%= conf.time_from %></th>
            <th id = "ds_<%= conf.id %>_dts_time_to"><%= conf.time_to %></th>
            <th id="ds_<%= conf.id %>_dts_count_by"><%= conf.count_by %></th>
            <th id = "ds_<%= conf.id %>_dts_join_require"><%= conf.join_require %></th>

            <th id="ds_<%= conf.id %>_dts_join_reward"><%= conf.join_reward %></th>
            <th id="ds_<%= conf.id %>_dts_has_all_boost"><%= conf.has_all_boost %></th>

            <th id="ds_<%= conf.id %>_dts_max_rest_id"><%= conf.max_rest_id %></th>
            <th id="ds_<%= conf.id %>_dts_time_show_from"><%= conf.show_from %></th>
            <th id="ds_<%= conf.id %>_dts_time_show_to"><%= conf.show_to %></th>
            <th id="ds_<%= conf.id %>_dts_evt_copy"><%= conf.evt_popup_copy %></th>
            <th id="ds_<%= conf.id %>_dts_champion_rest"><%= conf.champion_rest %></th>
          </tr>
          <% }); %>
          </tbody>
        </table>
      </div>
    </div>
  </div>

  <div class="modal fade edit-config-modal-lg" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-lg">
      <div class="modal-content">

        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">×</span>
          </button>
          <h4 class="modal-title" id="myModalLabel">Edit Config</h4>
        </div>


        <div class="modal-body">

          
