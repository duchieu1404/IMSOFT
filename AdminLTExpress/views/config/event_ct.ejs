                <input type="text" class="form-control" placeholder="join_reward" id="edt_join_reward" name="edt_join_reward" value="">
              </div>
            </div>
            <div class="form-group">
              <label class="control-label col-md-2 col-sm-2 col-xs-2">has_all_boost</label>
              <div class="col-md-9 col-sm-9 col-xs-12">
                <input type="text" class="form-control" placeholder="has_all_boost" id="edt_has_all_boost" name="edt_has_all_boost"
