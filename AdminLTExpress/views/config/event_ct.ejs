    </div>
  </div>

  <!-- event ct insert test data form -->

  <div class="modal fade event-ct-insert-test-data-modal-lg" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-lg">
      <div class="modal-content">
  
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">×</span>
          </button>
          <h4 class="modal-title" id="myModalLabel">Insert Test Data</h4>
        </div>
        <div class="modal-body">
  
          <form action="/config/event_ct_insert_test_data" method="post" id="event-ct-insert-test-data-form" data-parsley-validate
            class="form-horizontal form-label-left">
  
            <!-- === -->
  
            <div class="form-group">
              <label class="control-label col-md-2 col-sm-3 col-xs-4">event_id</label>
  
              <div class="col-md-6 col-sm-9 col-xs-12">
                <input type="text" class="form-control" placeholder="event_id" id="edt_event_id" name="edt_event_id"
                  value="">
              </div>
            </div>
            <div class="form-group">
              <label class="control-label col-md-2 col-sm-3 col-xs-4">rest_id</label>
              <div class="col-md-6 col-sm-9 col-xs-12">
                <input type="text" class="form-control" placeholder="rest_id" id="edt_rest_id" name="edt_rest_id"
                  value="">
              </div>
            </div>
            <div class="modal-footer">
              <input type="button" class="btn btn-primary" value="Add" onclick="btnInsertTestDataClicked()">
              <input type="button" class="btn btn-default" data-dismiss="modal" value="Cancel">
            </div>
          </form>
  
        </div>
      </div>
    </div>
  </div>




  <div class="modal fade delete_user-modal-lg" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-lg">
      <div class="modal-content">

        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">×</span>
          </button>
          <h4 class="modal-title" id="myModalLabel">Do you want to delete this user?</h4>
        </div>
        <div class="modal-body">

          <form action="/config/delete_event_ct" method="post" id="delete_user-form2" data-parsley-validate class="form-horizontal form-label-left">

            <!-- === -->

            <div class="form-group">
              <label class="control-label col-md-2 col-sm-3 col-xs-4">Id </label>

              <div class="col-md-4 col-sm-9 col-xs-12">
                <input type="text" class="form-control" placeholder="Version Id" id = "delete_edt_Id" name="delete_edt_Id" value="" readonly="readonly">
              </div>

              <label class="control-label col-md-2 col-sm-3 col-xs-4">Device id</label>

              <div class="col-md-3 col-sm-9 col-xs-12">
                <input type="text" class="form-control" placeholder="Device id" id = "delete_edt_device_id" name="delete_edt_device_id" value = "0" readonly="readonly">
              </div>
            </div>

            <div class="form-group">
              <label class="control-label col-md-2 col-sm-3 col-xs-4">Type "delete" to confirm </label>
              <div class="col-md-4 col-sm-9 col-xs-12">
                <input type="text" class="form-control" placeholder="delete" id = "delete_text_confirm" name="delete_text_confirm" value="">
              </div>
            </div>

            <div class="modal-footer">
              <input type="button" class="btn btn-default" data-dismiss="modal" value="Close" id = "modalDelete">
              <input type="button" class="btn btn-danger" value="Delete" onclick="btnDoDeleteEventGcc()">
            </div>
          </form>

        </div>
      </div>
    </div>
  </div>


</section>

<script type="text/javascript">

  var btnDeleteEventGcc = function(serverId){
    $('#delete_edt_Id').val($('#ds_'+serverId+'_dts_id').html());
    $('#delete_edt_device_id').val($('#ds_'+serverId+'_dts_device_id').html());
  }

  var btnDoDeleteEventGcc = function(){

    if( $('#delete_text_confirm').val() !='delete'){
      alert("Please type delete to confirm you want to delete that event gcc");
      $('#delete_text_confirm').focus();
      return;
    }

    let user_id_delete =  $('#delete_edt_Id').val();
    $.ajax({
      type: "POST",
      url: '/config/event_ct_delete',
      data: $( "#delete_user-form2" ).serialize(),
      success: function(dataResult,textStatus,jqXHR){
        console.log(dataResult);
        if(dataResult.status ==0){
          $('#dataServerConfig_'+user_id_delete).remove();
          $(".delete_user-modal-lg .close").click()
          alert("Delete success");
        }
      },
      dataType: 'json'
    });
  }
  var btnEditClicked = function(serverId)
  {
    $('#edt_id').val($('#ds_'+serverId+'_dts_id').html());
    $('#edt_time_from').val($('#ds_'+serverId+'_dts_time_from').html());
    $('#edt_time_to').val($('#ds_'+serverId+'_dts_time_to').html());
    $('#edt_count_by').val($('#ds_'+serverId+'_dts_count_by').html());
    $('#edt_status').val($('#ds_' + serverId + '_dts_status').html());
    $('#edt_join_require').val($('#ds_' + serverId + '_dts_join_require').html());
    $('#edt_join_reward').val($('#ds_'+serverId+'_dts_join_reward').html());
    $('#edt_has_all_boost').val($('#ds_' + serverId + '_dts_has_all_boost').html());  
    $('#edt_time_show_from').val($('#ds_' + serverId + '_dts_time_show_from').html());  
    $('#edt_time_show_to').val($('#ds_'+serverId+'_dts_time_show_to').html());
    $('#edt_max_rest_id').val($('#ds_' + serverId + '_dts_max_rest_id').html());
    $('#edt_evt_popup_copy').val($('#ds_' + serverId + '_dts_evt_popup_copy').html());  
    $('#edt_champion_rest').val($('#ds_' + serverId + '_dts_champion_rest').html());  
    $('#edt_status').prop('readonly', status == 2);

  }

  var onClick_btnAddNewEvent = function()
  {
     $('#edt_id').val(-1);
    $('#edt_time_from').val('');
    $('#edt_time_to').val('');
    $('#edt_count_by').val('1');
    $('#edt_status').val('1');
    $('#edt_join_require').val('0');
    $('#edt_join_reward').val('');
    $('#edt_has_all_boost').val('0');
    $('#edt_time_show_from').val('');
    $('#edt_time_show_to').val('');
    $('#edt_max_rest_id').val('');
    $('#edt_evt_popup_copy').val('');  
    $('#edt_status').prop('readonly', false);
}

var btnInsertTestDataClicked = function()
{
  console.log("btnInsertTestDataClicked");
  $.ajax({
    type: "POST",
    url: '/config/event_ct_insert_test_data',
    data: $("#event-ct-insert-test-data-form").serialize(),
    success: function (dataResult, textStatus, jqXHR) {
      console.log(dataResult);
      if (dataResult.status == 0) {
        $(".event-ct-insert-test-data-modal-lg .close").click()
        alert("success");
      }
    },
    dataType: 'json'
  });
}
var btnAddNewScoreClicked = function()
{
    console.log("btnAddNewScoreClicked");
    $.ajax({
      type: "POST",
      url: '/config/event_ct_add_score',
      data: $("#event_ct_add_score-form").serialize(),
      success: function (dataResult, textStatus, jqXHR) {
        console.log(dataResult);
        if (dataResult.status == 0) {
          $(".event-ct-add-score-modal-lg .close").click()
          alert("Add score success");
        }
      },
      dataType: 'json'
    });
}
var getCountByName= function(type)
{
  switch(parseInt(type))
  {
     case 1:
     return 'LIKE';
    case 2:
      return 'DISH';
    case 3:
      return 'COIN';
    case 4:
      return 'COMBOX_MAX';
    case 5:
      return 'CUSTOMER';
    case 6:
      return 'DRINK';
    case 7:
      return 'STAR';
    case 8:
      return 'TIP';
    case 9:
      return 'COMBO';
    case 10:
      return 'LEVEL_NO_BURN';
    case 11:
      return 'LEVEL_NO_TRASH';
    case 12:
