<% include ../partial/admin_header.ejs %>
<!-- Content Header (Page header)-->
<section class="content-header">
  <h1>Server Config<small>Configuration</small></h1>
  <ol class="breadcrumb">
    <li><a href="#"><i class="fa fa-dashboard"></i>Configuration</a></li>
    <li class="active">Event Season pass</li>
  </ol>
</section>




<!-- Main content-->
<section class="content">

  <div class="col-md-12 col-sm-12 col-xs-12">
    <div class="x_panel">
      <div class="x_title">
        <div class="clearfix"></div>
      </div>

      <div class="box box-info">
        <div class="box-header with-border">
          <h3 class="box-title">Event Seasson Pass</h3>
        </div>

        <div class="box-footer">
          <div>
            <input type="button" data-toggle="modal" data-target=".edit-config-modal-lg" class="btn btn-success"
              value="Add Event" onclick="onClick_btnAddNewEvent()" />

          </div>
        </div>

      </div>
    </div>
  </div>

  <div class="col-md-12 col-sm-12 col-xs-12">
    <div class="x_panel">
      <div class="x_content">
        <p class="text-muted font-13 m-b-30">
        </p>
        <table id="datatable" class="table table-striped table-bordered">
          <thead>
            <tr>
              <th>Action </th>
              <th>Id</th>
              <th>Status</th>
              <th>Id season pass</th>
              <!-- <th>Id Bundle</th> -->
              <!-- <th>Link dowload</th> -->
              <th>Time From</th>
              <th>Time To</th>
              <th>version required</th>
              <th>Platform</th>
              <!-- <th>Level X3</th> -->
            </tr>
          </thead>
          <tbody>
            <% dataConfigs.forEach(function(conf) 
          {       
            %>
            <tr id="dataServerConfig_<%= conf.id %>">
              <th>
                <button type="button" class="btn btn-primary" data-toggle="modal" 
                  data-target=".edit-config-modal-lg" onclick="btnEditClicked(<%= conf.id %>)">Edit</button>

                <button type="button" class="btn btn-danger" data-toggle="modal" data-target=".delete_user-modal-lg"
                  onclick="btnDeleteEvent(<%= conf.id %>)">Delete</button>

              </th>
              <th id="ds_<%= conf.id %>_dts_id"><%= conf.id %></th>
              <th id="ds_<%= conf.id %>_dts_status"><%= conf.status %></th>
              <th id="ds_<%= conf.id %>_dts_id_ssp"><%= conf.id_ssp %></th>
              <!-- <th id="ds_<%= conf.id %>_dts_id_bundle"><%= conf.id_bundle %></th> -->
              <!-- <th id="ds_<%= conf.id %>_dts_link_download"><%= conf.link_download %></th> -->
              
              <th id="ds_<%= conf.id %>_dts_time_from"><%= conf.time_from %></th>
              <th id="ds_<%= conf.id %>_dts_time_to"><%= conf.time_to %></th>
              <th id="ds_<%= conf.id %>_dts_version"><%= conf.version %></th>
              <th id="ds_<%= conf.id %>_dts_platform" style="display: none;" ><%= conf.platform %></th>
              <th id="ds_<%= conf.id %>_dts_platform_text"   ><%=  if(conf.platform == 0) "All" else if(conf.platform == 1) "Android" else "IOS"   %></th>
              <!-- <th id="ds_<%= conf.id %>_dts_levelX3"><%= conf.levelX3 %></th> -->
            </tr>
            <% }); %>
          </tbody>
        </table>
      </div>
    </div>
  </div>

  <div class="modal fade edit-config-modal-lg" tabindex="-1" role="dialog" aria-hidden="true" data-backdrop="static">
    <div class="modal-dialog modal-lg">
      <div class="modal-content">

        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">×</span>
          </button>
          <h4 class="modal-title" id="myModalLabel">Edit Config</h4>
        </div>


        <div class="modal-body">


          <form action="/config/event_ssp" method="post" id="demo-form2" data-parsley-validate
            class="form-horizontal form-label-left">

            <!-- === -->

            <div class="form-group">

              <label class="control-label col-md-2 col-sm-3 col-xs-4">Id</label>
              <div class="col-md-9 col-sm-9 col-xs-12">
                <input type="text" class="form-control" placeholder="Id" id="edt_id" name="edt_id" value=""
                  readonly="readonly">
              </div>
            </div>


            <div class="form-group">
              <label class="control-label col-md-2 col-sm-2 col-xs-2">status</label>
              <div class="col-md-9 col-sm-9 col-xs-12">
                <select class="form-control" id="edt_status" name="edt_status">
                  <option value="0">DISABLE</option>
                  <option value="1">ENABLE</option>
                </select>
              </div>
            </div>
            <div class="form-group">
              <label class="control-label col-md-2 col-sm-2 col-xs-2">Platform </label>
              <div class="col-md-9 col-sm-9 col-xs-12">
                <select class="form-control" id="edt_platform" name="edt_platform">
                  <option value="0">All</option>
                  <option value="1">Android</option>
                  <option value="1">IOS</option>
                </select>
              </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2 col-sm-2 col-xs-2">Id Season pass</label>
                <div class="col-md-9 col-sm-9 col-xs-12">
                  <input type="number" class="form-control" id ="edt_id_ssp" name ="edt_id_ssp">
                </div>
            </div>
            <!-- <div class="form-group">
                <label class="control-label col-md-2 col-sm-2 col-xs-2">Id bundle</label>
                <div class="col-md-9 col-sm-9 col-xs-12">
                  <input type="number" class="form-control" id ="edt_id_bundle" name ="edt_id_bundle">
                </div>
            </div> -->
            <!-- <div class="form-group">
                <label class="control-label col-md-2 col-sm-2 col-xs-2">Link download</label>
                <div class="col-md-9 col-sm-9 col-xs-12">
                  <input type="text" class="form-control" id="edt_link_download" name ="edt_link_download">
                </div>
            </div> -->
  
            <div class="form-group">
              <label class="control-label col-md-2 col-sm-2 col-xs-2">time_from</label>
              <div class="col-md-9 col-sm-9 col-xs-12 ">
                <div class='input-group date' id='datetimefrom'>
                        <input type='text' class="form-control" placeholder="time_from" id="edt_time_from" name="edt_time_from"/>
                        <span class="input-group-addon">
                            <span class="glyphicon glyphicon-calendar"></span>
                        </span>
                    </div>
              </div>
            </div> 
            <div class="form-group">
              <label class="control-label col-md-2 col-sm-2 col-xs-2">time_to</label>
              <div class="col-md-9 col-sm-9 col-xs-12">
                <div class='input-group date' id='datetimeto'>
                        <input type='text' class="form-control" placeholder="time_to" id="edt_time_to" name="edt_time_to"/>
                        <span class="input-group-addon">
                            <span class="glyphicon glyphicon-calendar"></span>
                        </span>
                </div>
              </div>
            </div>
            <!-- <div class="form-group">
              <label class="control-label col-md-2 col-sm-2 col-xs-2">Level X3</label>
              <div class="col-md-9 col-sm-9 col-xs-12 ">
                <div class='input-group ' >
                  <input type='text' class="form-control" placeholder="time_to" id="edt_levelX3" name="edt_levelX3"/>
                </div>
              </div>
            </div> -->
            <div class="form-group">
              <label class="control-label col-md-2 col-sm-2 col-xs-2">Version</label>
              <div class="col-md-9 col-sm-9 col-xs-12 ">
                <div class='input-group ' >
                    <input  class="form-control  "  id = "edt_version" name="edt_version" value=""> 
                  </div>
              </div>
            </div>
            <div class="modal-footer">
              <input type="submit" class="btn btn-default" data-dismiss="modal" value="Close">
              <input type="submit" class="btn btn-primary" value="Save changes">
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>

  <div class="modal fade delete_user-modal-lg" tabindex="-1" role="dialog" aria-hidden="true" data-backdrop="static">
    <div class="modal-dialog modal-lg">
      <div class="modal-content">

        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">×</span>
          </button>
          <h4 class="modal-title" id="myModalLabel">Do you want to delete?</h4>
        </div>
        <div class="modal-body">

          <form action="/config/delete_event_ssp" method="post" id="delete_user-form2" data-parsley-validate
            class="form-horizontal form-label-left">

            <!-- === -->

            <div class="form-group">
              <label class="control-label col-md-2 col-sm-3 col-xs-4">Event Id </label>

              <div class="col-md-4 col-sm-9 col-xs-12">
                <input type="text" class="form-control" placeholder="Event Id" id="delete_edt_Id" name="delete_edt_Id"
                  value="" readonly="readonly">
              </div>
            </div>

            <div class="form-group">
              <label class="control-label col-md-2 col-sm-3 col-xs-4">Type "delete" to confirm </label>
              <div class="col-md-4 col-sm-9 col-xs-12">
                <input type="text" class="form-control" placeholder="delete" id="delete_text_confirm"
                  name="delete_text_confirm" value="">
              </div>
            </div>

            <div class="modal-footer">
              <input type="button" class="btn btn-default" data-dismiss="modal" value="Close" id="modalDelete">
              <input type="button" class="btn btn-danger" value="Delete" onclick="btnDoDeleteEvent()">
            </div>
          </form>

        </div>
      </div>
    </div>
  </div>


</section>

<script type="text/javascript">
  $(document).ready(function(){
    $('#datetimefrom').datetimepicker({
      format: 'YYYY/MM/DD HH:mm:ss',
      defaultDate: new Date()
    });
    $('#datetimeto').datetimepicker({
      format: 'YYYY/MM/DD HH:mm:ss',
      defaultDate: new Date()
    });
  });
  var btnDeleteEvent = function (serverId) {
    $('#delete_edt_Id').val($('#ds_' + serverId + '_dts_id').html());
  }

  var btnDoDeleteEvent = function () {

    if ($('#delete_text_confirm').val() != 'delete') {
      alert("Please type delete to confirm you want to delete that event ssp");
      $('#delete_text_confirm').focus();
      return;
    }

    let user_id_delete = $('#delete_edt_Id').val();
    $.ajax({
      type: "POST",
      url: '/config/event_ssp_delete',
      data: $("#delete_user-form2").serialize(),
      success: function (dataResult, textStatus, jqXHR) {
        console.log(dataResult);
        if (dataResult.status == 0) {
          $('#dataServerConfig_' + user_id_delete).remove();
          $(".delete_user-modal-lg .close").click()
          alert("Delete success");
        }
      },
      dataType: 'json'
    });
  }

  var btnEditClicked = function (serverId) {
    $('#edt_id').val($('#ds_' + serverId + '_dts_id').html());
    $('#edt_status').val($('#ds_' + serverId + '_dts_status').html());
    $('#edt_platform').val($('#ds_' + serverId + '_dts_platform').html());
    $('#edt_type').val($('#ds_' + serverId + '_dts_type').html());
    $('#edt_time_from').val($('#ds_' + serverId + '_dts_time_from').html());
    $('#edt_time_to').val($('#ds_' + serverId + '_dts_time_to').html());
    $('#edt_version').val($('#ds_' + serverId + '_dts_version').html());
    $('#edt_levelX3').val($('#ds_' + serverId + '_dts_levelX3').html());

    $('#edt_status').prop('readonly', status == 2);
    $(`#edt_link_download`).val($('#ds_' + serverId + '_dts_link_download').html());
    $(`#edt_id_ssp`).val($('#ds_' + serverId + '_dts_id_ssp').html());
    $(`#edt_id_bundle`).val($('#ds_' + serverId + '_dts_id_bundle').html());
  }


  var onClick_btnAddNewEvent = function () {
    $('#edt_id').val(-1);
    $('#edt_status').val('1');
    $('#edt_platform').val('0');
    $('#edt_type').val('');
    $('#edt_time_from').val('');
    $('#edt_time_to','#edt_levelX3','#edt_version').val('');

    $('#edt_status').prop('readonly', false);
  }

  var btnInsertTestDataClicked = function () {
    console.log("btnInsertTestDataClicked");
    $.ajax({
      type: "POST",
      url: '/config/event_ssp_insert_test_data',
      data: $("#event-ssp-insert-test-data-form").serialize(),
      success: function (dataResult, textStatus, jqXHR) {
        console.log(dataResult);
        if (dataResult.status == 0) {
          $(".event-ssp_insert_test_data-modal-lg .close").click()
          alert("success");
        }
        else {
          alert("error");
        }
      },
      dataType: 'json'
    });
  }

  var btnInsertTestDataMeClicked = function () {
    console.log("btnInsertTestDataMeClicked");
    $.ajax({
      type: "POST",
      url: '/config/event_ssp_insert_test_data_me',
      data: $("#event-ssp-insert-test-data-me-form").serialize(),
      success: function (dataResult, textStatus, jqXHR) {
        console.log(dataResult);
        if (dataResult.status == 0) {
          $(".event-ssp_insert_test_data_me-modal-lg .close").click()
          alert("success");
        }
        else {
          alert("error");
        }
      },
      dataType: 'json'
    });
  }
</script>

<% include ../partial/admin_footer.ejs %>