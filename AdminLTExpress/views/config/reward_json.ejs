                    </div>
                  </div>
              <div class="col-sm-2">
                <!-- text input -->
                <div class="form-group">
                  <label>HAPPY_HOUR</label>
                  <input type="text" class="form-control" placeholder="Enter ..." id = "6" name="6" onchange="btnGenerateClicked()">
                </div>
              </div>
              <div class="col-sm-2">
                <div class="form-group">
                  <label>GROCERIES</label>
                  <input type="text" class="form-control" placeholder="Enter ..." id = "7" name="7" onchange="btnGenerateClicked()">
