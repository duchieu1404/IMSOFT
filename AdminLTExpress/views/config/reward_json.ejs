              <div class="col-sm-2">
                <div class="form-group">
                  <label>NMT</label>
                  <input type="text" class="form-control" placeholder="Enter ..." id = "12" name="12" onchange="btnGenerateClicked()">
                </div>
              </div>
            
              <div class="col-sm-2">
                <!-- text input -->
                <div class="form-group">
                  <label>NMC</label>
                  <input type="text" class="form-control" placeholder="Enter ..." id = "13" name="13" onchange="btnGenerateClicked()">
                </div>
              </div>
            </div>

            <div class = "row">

              <div class="col-sm-2">
                <!-- text input -->
                <div class="form-group">
                  <input type="button" data-toggle="modal" data-target=".edit-config-modal-lg" class="btn btn-success "
                    value="GENERATE" onclick="btnGenerateClicked()" />

                    <input type="button" data-toggle="modal" data-target=".edit-config-modal-lg" class="btn btn-danger " value="RESET"
                      onclick="btnResetClicked()" />
                </div>
              </div>
            </div>

            <div class="row">
              <div class="col-sm-6">
                  <textarea type="text" class="form-control" rows="5" placeholder="json" id="edt_reward_json" name="edt_reward_json" value=""></textarea>
            </div>
            </div>
            </div>
          </form>
        </div>
      </div>
    </div>
</section>

<script type="text/javascript">

  var btnGenerateClicked = function()
  {
      console.log("btnGenerateClicked");

      var json = [];

      for(var i = 0; i<20; i++)
      {
          var value =  $('#' + i).val();

          value = parseInt(value);

          if(value && value > 0)
          {
              var gameRewardItem = null;

              if(i == 0)
              {
                var resId =  $('#coin_rest_id').val();
                gameRewardItem =
                {
                  "type": i,
                  "resId" : resId,
                  "quantity": parseInt(value)
                };
              }
              else
              {
                gameRewardItem =
                {
                  "type": i,
                  "quantity": parseInt(value)
                };
              }
            json.push(gameRewardItem);
          }

          $('#edt_reward_json').val(JSON.stringify(json));
      }
  }

  var btnResetClicked = function()
  {
    console.log("btnResetClicked");
    for(var i = 0; i< 20; i++)
    {
        $('#' + i).val('');
    }

    $('#edt_reward_json').val('');
  }
</script>

