<% include ../partial/admin_header.ejs %>
<!-- Content Header (Page header)-->
<section class="content-header">
  <h1>Server Config<small>Configuration</small></h1>
  <ol class="breadcrumb">
    <li><a href="#"><i class="fa fa-dashboard"></i>Configuration</a></li>
    <li class="active">Sync Category</li>
  </ol>
</section>


<!-- Main content-->
<section class="content">

  <div class="col-md-12 col-sm-12 col-xs-12">
    <div class="x_panel">
      <div class="x_title">
        <div class="clearfix"></div>
      </div>

      <div class="box box-info">
        <div class="box-header with-border">
          <h3 class="box-title">Search User Form</h3>
        </div>

        <div class="box-footer">
          <div>
            <input type="button"
                   data-toggle="modal"
                   data-target=".edit-config-modal-lg" class="btn btn-success" value="Add new type" onclick="onClick_btnAddNewType()"/>
            <input type="button" class="btn btn-danger" value="Refresh Config File"/>
          </div>
        </div>

      </div>
    </div>
  </div>

  <div class="col-md-12 col-sm-12 col-xs-12">
    <div class="x_panel">
      <div class="x_content">
        <p class="text-muted font-13 m-b-30">
        </p>
        <table id="datatable" class="table table-striped table-bordered">
          <thead>
          <tr>
            <th>Id</th>
            <th>key</th>
            <th>code</th>
            <th>cate_type</th>
            <th>value_type</th>
            <th>is_not_sync</th>
            <th>level</th>
            <th>description</th>
            <th>Edit</th>
          </tr>
          </thead>

          <tbody>
          <% dataConfigs.forEach(function(conf) { %>
          <tr id = "dataServerConfig_<%= conf.id %>">
            <th id = "ds_<%= conf.id %>_dts_id"><%= conf.id %></th>
            <th id = "ds_<%= conf.id %>_dts_key"><%= conf.key %></th>
            <th id = "ds_<%= conf.id %>_dts_code"><%= conf.code %></th>
            <th id = "ds_<%= conf.id %>_dts_cate_type"><%= conf.cate_type %></th>
            <th id = "ds_<%= conf.id %>_dts_value_type"><%= conf.value_type %></th>
            <th id = "ds_<%= conf.id %>_dts_is_not_sync"><%= conf.is_not_sync %></th>
            <th id = "ds_<%= conf.id %>_dts_level"><%= conf.level %></th>
            <th id = "ds_<%= conf.id %>_dts_description"><%= conf.description %></th>
            <th>
              <button type="button"
                      class="btn btn-primary"
                      data-toggle="modal"
                      data-target=".edit-config-modal-lg"
                      onclick="btnEditClicked(<%= conf.id %>)"
              >Edit</button>
            </th>
          </tr>

          <% }); %>

          </tbody>
        </table>
      </div>
    </div>
  </div>

  <div class="modal fade edit-config-modal-lg" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-lg">
      <div class="modal-content">

        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">Ã—</span>
          </button>
          <h4 class="modal-title" id="myModalLabel">Edit Config</h4>
        </div>
        <div class="modal-body">

          <form action="/config/sync_type" method="post" id="demo-form2" data-parsley-validate class="form-horizontal form-label-left">

            <!-- === -->

            <div class="form-group">
              <label class="control-label col-md-2 col-sm-3 col-xs-4">Id</label>
              <div class="col-md-9 col-sm-9 col-xs-12">
                <input type="text" class="form-control" placeholder="Id" id = "edt_Id" name="edt_Id" value="" readonly="readonly">
              </div>
            </div>
            <div class="form-group">
              <label class="control-label col-md-2 col-sm-3 col-xs-4">Key</label>
              <div class="col-md-9 col-sm-9 col-xs-12">
                <input type="text" class="form-control" placeholder="Key" id = "edt_Key" name="edt_Key" value = "0">
              </div>
            </div>


            <div class="form-group">
              <label class="control-label col-md-2 col-sm-3 col-xs-4">Code</label>
              <div class="col-md-9 col-sm-9 col-xs-12">
                <input type="text" class="form-control" placeholder="Code" id = "edt_Code" name="edt_Code" value = "0">
              </div>
            </div>


            <div class="form-group">
              <label class="control-label col-md-2 col-sm-3 col-xs-4">ValueType</label>
              <div class="col-md-9 col-sm-9 col-xs-12">
                <input type="text" class="form-control" placeholder="ValueType" id = "edt_Value_type" name="edt_Value_type" value = "0">
              </div>
            </div>

            <div class="form-group">
              <label class="control-label col-md-2 col-sm-3 col-xs-4">Prefix</label>
              <div class="col-md-9 col-sm-9 col-xs-12">
                <input type="text" class="form-control" placeholder="Category Type" id = "edt_Cate_type" name="edt_Cate_type" value = "0">
              </div>
            </div>


            <div class="form-group">
              <label class="control-label col-md-2 col-sm-3 col-xs-4">is_not_sync</label>
              <div class="col-md-9 col-sm-9 col-xs-12">
                <input type="text" class="form-control" placeholder="is_not_sync" id = "edt_Is_not_sync" name="edt_Is_not_sync" value = "0">
              </div>
            </div>

            <div class="form-group">
              <label class="control-label col-md-2 col-sm-3 col-xs-4">Level</label>
              <div class="col-md-9 col-sm-9 col-xs-12">
                <input type="text" class="form-control" placeholder="level" id = "edt_Level" name="edt_Level" value = "0">
              </div>
            </div>

            <div class="form-group">
              <label class="control-label col-md-2 col-sm-3 col-xs-4">Description</label>
              <div class="col-md-9 col-sm-9 col-xs-12">
                <input  class="form-control col-md-5 col-xs-10" type="text" id = "edt_Description" name="edt_Description" value="">
              </div>
            </div>

            <div class="modal-footer">
              <input type="submit" class="btn btn-default" data-dismiss="modal" value="Close">
              <input type="submit" class="btn btn-primary" value="Save changes">
            </div>
          </form>

        </div>


      </div>
    </div>
  </div>
</section>

<script type="text/javascript">
  var btnEditClicked = function(serverId){
    $('#edt_Id').val($('#ds_'+serverId+'_dts_id').html());
    $('#edt_Key').val($('#ds_'+serverId+'_dts_key').html());
    $('#edt_Code').val($('#ds_'+serverId+'_dts_code').html());
    $('#edt_Cate_type').val($('#ds_'+serverId+'_dts_cate_type').html());
    $('#edt_Is_not_sync').val($('#ds_'+serverId+'_dts_is_not_sync').html());
    $('#edt_Level').val($('#ds_'+serverId+'_dts_level').html());
    $('#edt_Value_type').val($('#ds_'+serverId+'_dts_value_type').html());

    $('#edt_Description').val($('#ds_'+serverId+'_dts_description').html());
  }

  var onClick_btnAddNewType = function(){
    $('#edt_Id').val(-1);
    $('#edt_Key').val('');
    $('#edt_Code').val('');
    $('#edt_Cate_type').val(0);
    $('#edt_Is_not_sync').val(0);
    $('#edt_Value_type').val(0);
    $('#edt_Level').val(0);
    $('#edt_Description').val('');
  }
</script>

<% include ../partial/admin_footer.ejs %>