<% include partial/admin_header_signin.ejs %>
<body class="bg-black">
<div class="form-box" id="login-box">
    <div class="header">Doctor Hospital CMS Login</div>
    <form action="/login" method="post">
        <div class="body bg-gray">
            <div class="form-group">
                <input class="form-control" type="text" name="txtUsername" placeholder="User ID">
            </div>
            <div class="form-group">
                <input class="form-control" type="password" name="txtPassword" placeholder="Password">
            </div>
        </div>
        <div class="footer">
            <button class="btn bg-olive btn-block" type="submit">Sign me in</button>
        </div>
    </form>
</div>
<!-- jQuery 2.0.2-->
<script src="/js/libs/jquery.min.js"></script>
<!-- Bootstrap-->
<script src="../js/bootstrap.min.js" type="text/javascript"></script>
</body>
