<% include ../../partial/admin_header.ejs %>
<!-- Content Header (Page header)-->
<section class="content-header">
  <h1>Admin Tool<small>Send Message</small></h1>
  <ol class="breadcrumb">
    <li><a href="#"><i class="fa fa-dashboard"></i>Send Message</a></li>
    <li class="active">Admin Tool</li>
  </ol>
</section>
<!-- Main content-->

<section class="content">
  <div class="col-md-12 col-sm-12 col-xs-12">
    <div class="x_panel">
      <div class="x_title">
        <div class="clearfix"></div>
      </div>

      <div class="x_content">
        <br />
        <form id="demo-search_form2"
              action="/root/admin/message/search_user" method="post"
              data-parsley-validate class="form-horizontal form-label-left">

          <!-- === -->

          <div class="form-group">
            <label class="control-label col-md-2 col-sm-3 col-xs-4">User ID</label>

            <div class="col-md-3 col-sm-9 col-xs-12">
              <input id="searchUserId" name="searchUserId"  class="form-control col-md-5 col-xs-10" type="text" value="<%=search_form.user_id%>">
            </div>

            <label class="control-label col-md-2 col-sm-3 col-xs-4">Full name</label>

            <div class="col-md-4 col-sm-9 col-xs-12">
              <input id="searchFullName"  name="searchFullName"  type="text" class="form-control  col-md-5 col-xs-10" placeholder=""  value="<%=search_form.fullname%>">
            </div>
          </div>

          <div class="form-group">

            <label class="control-label col-md-2 col-sm-3 col-xs-4">Device Id</label>

            <div class="col-md-4 col-sm-9 col-xs-12">
              <input id="searchDeviceId"  name="searchDeviceId"  type="text" class="form-control  col-md-5 col-xs-10" placeholder=""  value="<%=search_form.searchDeviceId%>">
            </div>

            <label class="control-label col-md-2 col-sm-3 col-xs-4">Trang ( 10 bản ghi / 1 trang) mặc định 0</label>

            <div class="col-md-3 col-sm-9 col-xs-12">
              <input id="searchMax" name="searchMax"  class="form-control col-md-5 col-xs-10" type="text" value="<%=search_form.searchMax%>">
            </div>
          </div>

          <!-- === -->

          <div class="modal-footer">
            <div class="col-md-6 col-sm-9 col-xs-12">
              <input type="submit" class="btn btn-success" value="Search"/>
            </div>
          </div>

        </form>

      </div>
    </div>
  </div>

  <div class="col-md-12 col-sm-12 col-xs-12">
    <div class="x_panel">
      <div class="x_content">
        <p class="text-muted font-13 m-b-30">
        </p>
        <table id="datatable" class="table table-striped table-bordered">
          <thead>
          <tr>
            <th>Action</th>
            <th>Id</th>
            <th>Username</th>
            <th>Fullname</th>
            <th>Gold</th>
            <th>Diamond</th>
            <th>Total Cashout</th>
            <th>Total SMS</th>
            <th>Total CARD</th>
            <th>Level</th>
            <th>Damm Ratio</th>
            <th>Device Id</th>

          </tr>
          </thead>

          <tbody>
          <% listUsers.forEach(function(userInfo) { %>
          <tr id = "dataServerConfig_<%= userInfo.id %>">
            <th>
              <button type="button"
                      class="btn btn-primary"
                      data-toggle="modal"
                      data-target=".edit-config-modal-lg"
                      onclick="btnSendEmail(<%= userInfo.id %>)"
              >Email</button>
            </th>
            <th id = "ds_<%= userInfo.id %>_dts_id"><%= userInfo.id %></th>
            <th id = "ds_<%= userInfo.id %>_dts_username"><%= userInfo.username %></th>
            <th id = "ds_<%= userInfo.id %>_dts_fullname"><%= userInfo.fullname %></th>
            <th id = "ds_<%= userInfo.id %>_dts_gold"><%= userInfo.gold %></th>
            <th id = "ds_<%= userInfo.id %>_dts_diamond"><%= userInfo.diamond %></th>
            <th id = "ds_<%= userInfo.id %>_dts_total_cash_out"><%= userInfo.total_cash_out %></th>
            <th id = "ds_<%= userInfo.id %>_dts_total_sms"><%= userInfo.total_sms %></th>
            <th id = "ds_<%= userInfo.id %>_dts_total_card"><%= userInfo.total_card %></th>
            <th id = "ds_<%= userInfo.id %>_dts_level"><%= userInfo.level %></th>
            <th id = "ds_<%= userInfo.id %>_dts_damm_ratio"><%= userInfo.damm_ratio %></th>
            <th id = "ds_<%= userInfo.id %>_dts_device_id"><%= userInfo.device_id %></th>

          </tr>
          <% }); %>

          </tbody>
        </table>
      </div>
    </div>
  </div>

  <div class="modal fade edit-config-modal-lg" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-lg">
      <div class="modal-content">

        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">×</span>
          </button>
          <h4 class="modal-title" id="myModalLabel">Send Email</h4>
        </div>
        <div class="modal-body">

          <form action="/root/admin/send_email_to_user" method="post" id="demo-form2" data-parsley-validate class="form-horizontal form-label-left">

            <!-- === -->

            <div class="form-group">
              <label class="control-label col-md-2 col-sm-3 col-xs-4">User Id </label>

              <div class="col-md-4 col-sm-9 col-xs-12">
                <input type="text" class="form-control" placeholder="Version Id" id = "edt_Id" name="edt_Id" value="" readonly="readonly">
              </div>

              <label class="control-label col-md-2 col-sm-3 col-xs-4">Fullname</label>

              <div class="col-md-3 col-sm-9 col-xs-12">
                <input type="text" class="form-control" placeholder="Money Type" id = "edt_Fullname" name="edt_Fullname" value = "0" readonly="readonly">
              </div>
            </div>

            <!-- === -->

            <div class="form-group">
              <label class="control-label col-md-2 col-sm-3 col-xs-4">Loại email</label>

              <div class="col-md-3 col-sm-9 col-xs-12">
                <select class="form-control" id="edt_MessageType" name="edt_MessageType">
                  <option value="2">Thông tin</option>
                  <option value="1">Cộng Ruby</option>
                  <option value="0">Cộng Gold</option>

                </select>
              </div>

              <label class="control-label col-md-2 col-sm-3 col-xs-4">Số tiền</label>

              <div class="col-md-4 col-sm-9 col-xs-12">
                <input  class="form-control col-md-5 col-xs-10" required="required" type="text" id = "edt_MoneyValue" name="edt_MoneyValue" value="0"> <!-- noi dung text: val -->
              </div>
            </div>


            <div class="form-group">
              <label class="control-label col-md-2 col-sm-3 col-xs-4">Tiêu đề<span class="required">*</span></label>
              <div class="col-md-9 col-sm-9 col-xs-12">
                <input  class="form-control col-md-5 col-xs-10" required="required" type="text" id = "edt_Title" name="edt_Title" value=""> <!-- noi dung text: val -->
              </div>
            </div>

            <div class="form-group">
              <label class="control-label col-md-2 col-sm-3 col-xs-4">Nội dung<span class="required">*</span></label>
              <div class="col-md-9 col-sm-9 col-xs-12">
                <input  class="form-control col-md-5 col-xs-10" required="required" type="text" id = "edt_Content" name="edt_Content" value="">
              </div>
            </div>

            <div class="modal-footer">
              <input type="button" class="btn btn-default" data-dismiss="modal" value="Close">
              <input type="button" class="btn btn-primary" value="Send" onclick="btnDoSendEmail()">
            </div>
          </form>

        </div>


      </div>
    </div>
  </div>
</section>

<script type="text/javascript">
  var btnSendEmail = function(serverId){
    $('#edt_Id').val($('#ds_'+serverId+'_dts_id').html());
    $('#edt_Fullname').val($('#ds_'+serverId+'_dts_fullname').html());
   }
</script>

<script type="text/javascript">
  var btnDoSendEmail = function(){
    $.ajax({
      type: "POST",
      url: '/root/admin/send_email_to_user',
      data: $( "#demo-form2" ).serialize(),
      success: function(dataResult,textStatus,jqXHR){
            alert(dataResult.msg||textStatus||"Error");
      },
      dataType: 'json'
    });

  }
</script>

<% include ../../partial/admin_footer.ejs %>