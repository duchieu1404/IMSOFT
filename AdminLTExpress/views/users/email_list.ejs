<% include ../partial/admin_header.ejs %>
<!-- Content Header (Page header)-->
<section class="content-header">
  <h1>Admin Tool<small>Send Message</small></h1>
  <ol class="breadcrumb">
    <li><a href="#"><i class="fa fa-dashboard"></i>Send Message</a></li>
    <li class="active">Admin Tool</li>
  </ol>
</section>
<!-- Main content-->

<section class="content">
  <div class="col-md-12 col-sm-12 col-xs-12">
    <div class="x_panel">
      <div class="x_title">
        <div class="clearfix"></div>
      </div>

      <div class="x_content">
        <br />
        <form id="demo-search_form2"
              action="/users/email_list" method="post"
              data-parsley-validate class="form-horizontal form-label-left">
          <!-- === -->
          <div class="form-group">
            <label class="control-label col-md-2 col-sm-3 col-xs-4">User ID</label>
            <div class="col-md-3 col-sm-9 col-xs-12">
              <input id="searchUserId" name="searchUserId"  class="form-control col-md-5 col-xs-10" type="text" value="<%=search_form.user_id%>">
            </div>

            <div class="col-md-6 col-sm-9 col-xs-12">
              <input type="submit" class="btn btn-success" value="Search"/>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>

  <div class="col-md-12 col-sm-12 col-xs-12">
    <div class="x_panel">
      <div class="x_content">
        <p class="text-muted font-13 m-b-30">
        </p>
        <table id="datatable" class="table table-striped table-bordered">
          <thead>
          <tr>
            <th>Action</th>
            <th>Id</th>
            <th>email_type</th>
            <th>Title</th>
            <th>Content</th>
            <th>time_send</th>
            <th>send_by</th>
            <th>gift</th>
            <th>expire_time</th>
            <th>is_read</th>
            <th>is_claimed</th>
            <th>is_delete</th>
          </tr>
          </thead>

          <tbody>
          <% listUsers.forEach(function(userInfo) { %>
          <tr id = "dataServerConfig_<%= userInfo.id %>" style="color:<%= userInfo.email_type ==0?"black":userInfo.email_type ==1?"green":userInfo.email_type ==2?"orange":"red"  %>">
            <th>

            </th>
            <th id = "ds_<%= userInfo.id %>_dts_id"><%= userInfo.id %></th>
            <th id = "ds_<%= userInfo.id %>_dts_email_type"><%= userInfo.email_type ==0?"Normal":userInfo.email_type ==1?"Add data":userInfo.email_type ==2?"Important info":"Force Set data"  %> </th>
            <th id = "ds_<%= userInfo.id %>_dts_title"><%= userInfo.title %></th>
            <th id = "ds_<%= userInfo.id %>_dts_content"><%= userInfo.content %></th>
            <th id = "ds_<%= userInfo.id %>_dts_time_send"><%= userInfo.time_send %></th>
            <th id = "ds_<%= userInfo.id %>_dts_send_by"><%= userInfo.sent_by %></th>
            <th id = "ds_<%= userInfo.id %>_dts_gift"><%= userInfo.gift %></th>
            <th id = "ds_<%= userInfo.id %>_dts_expire_time"><%= userInfo.expire_time %></th>
            <th id = "ds_<%= userInfo.id %>_dts_is_read"><%= userInfo.is_read %></th>
            <th id = "ds_<%= userInfo.id %>_dts_is_claimed"><%= userInfo.is_claimed %></th>
            <th id = "ds_<%= userInfo.id %>_dts_is_delete"><%= userInfo.is_delete %></th>

          </tr>
          <% }); %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
  
  <script>
    var getEmailTypeName = function(email_type){
      switch (email_type) {
        case 0: return "Normal";
        case 1: return "Add data";
        case 2: return "Important info";
        case 3: return "Force Set data";
      }
    }

    var getEmailColorByType = function(){
      switch (email_type) {
        case 0: return "black";
        case 1: return "green";
        case 2: return "orange";
        case 3: return "red";
      }
    }
    
  </script>

</section>

<% include ../partial/admin_footer.ejs %>